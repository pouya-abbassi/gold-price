#:import a arabic_reshaper.reshape
#:import f bidi.algorithm.get_display

<Label>:
    font_name: 'ProggyTiny.ttf'
    font_size: 16

<MainWidget>:
    talanews: talanews
    iranshemsh: iranshemsh
    parsisgold: parsisgold
    rows: 3
    cols: 1
    padding: 10
    BoxLayout:
        size: root.width-20, 50
        size_hint: None, None
        Label:
            text_size: self.size
            font_size: 32
            halign: 'left'
            valign: 'middle'
            color: 0, 0.5, 0, 1
            text: 'PouyaCode.net'
        Button:
            font_name: 'Vazir.ttf'
            size: self.width, 50
            size_hint: None, None
            on_press: root.refresh()
            text: 'Refresh'

    BoxLayout:
        size: root.width-20, 50
        size_hint: None, None
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            font_name: 'Vazir.ttf'
            color: 1, 0.8, 0.2, 1
            text: 'talanews.com'
        Label:
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.1
                Rectangle:
                    pos: self.pos
                    size: self.size
            font_name: 'Vazir.ttf'
            color: 1, 0.8, 0.2, 1
            text: 'iranshemsh.com'
        Label:
            font_name: 'Vazir.ttf'
            color: 1, 0.8, 0.2, 1
            text: 'parsisgold.com'
    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.5, 0.5, 0.5, 0.6
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: talanews
            text: 'talanews.com'
        Label:
            id: iranshemsh
            canvas.before:
                Color:
                    rgba: 0.5, 0.5, 0.5, 0.1
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: 'iranshemsh.com'
        Label:
            id: parsisgold
            text: 'parsisgold.com'
